{
  "manifest_version": 3,
  "name": "IP Change Notifier by #beaubhavik",
  "description": "Tracks your IP address and notifies you if it changes.",
  "version": "1.0",
  "author": "beauworkingplayground@gmail.com",
  "homepage_url": "https://spiderdunia.com",
  "permissions": [
    "notifications"
  ],
  "host_permissions": [
    "*://api.ipify.org/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "IP Change Notifier",
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}